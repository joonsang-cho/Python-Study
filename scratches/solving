def howlong(a, b):
    c = b-a
    p = 0
    t = 1
    rep = 0
    breaker = True
    while breaker == True:
        for i in range(2):
            p = p + t
            rep = rep +1
            if p>=c:
                print(rep)
                breaker = False
                break
        t = t + 1

w = int(input())
for i in range(w):
    a, b = map(int, input().split())
    howlong(a, b)